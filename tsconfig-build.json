{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "rootDir": "src/",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "exclude": [
    "./src/__spec_helper__/__internal__/",
    "**/__spec__/*",
    "**/__test__/*",
    "**/*.spec.*",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.pw.ts*",
    "**/*.test-pw.ts*"
  ]
}
